<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".screen.CategoryItemScreen">


        <include
            android:id="@+id/includedActionBar"
            layout="@layout/actionbar_light_theme"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>


        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="Apple"
            android:textSize="42sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includedActionBar"
            tools:text="Apple" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="12dp"
            android:text="An apple is an edible fruit produced by an apple tree. Apples have been grown for thousands of years in Asia and Europe and were brought to North America by European colonists. Different cultivars are bred for various tastes and uses, including cooking, eating raw, and cider production."
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintTop_toBottomOf="@+id/itemName"
            tools:text="An apple is an edible fruit produced by an apple tree. Apples have been grown for thousands of years in Asia and Europe and were brought to North America by European colonists. Different cultivars are bred for various tastes and uses, including cooking, eating raw, and cider production." />


        <TextView
            android:id="@+id/nutritionValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/nutrition_value"
            android:textSize="38sp"
            app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintTop_toBottomOf="@+id/itemDescription" />

        <GridLayout
            android:id="@+id/nutritionValues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/nutritionValueTextView"
            app:layout_constraintStart_toStartOf="@+id/nutritionValueTextView"
            app:layout_constraintTop_toBottomOf="@+id/nutritionValueTextView"
            android:layout_marginStart="10dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/carbsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Carbs: 13.8g"
                android:textSize="18sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/proteinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="50dp"
                android:text="Protein: 0.26g"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/fatsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:text="Fats: 0.17g"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/caloriesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:text="Calories: 52kcal"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/fiberValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Fiber: 2.4g"/>

            <TextView
                android:id="@+id/sugarValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Sugar: 10.39g"/>

            <TextView
                android:id="@+id/vitaminAValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin A: 3mcg"/>

            <TextView
                android:id="@+id/vitaminB1Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin B-1: 0.017mg"/>

            <TextView
                android:id="@+id/vitaminB3Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin B-3: 0.091mg"/>

            <TextView
                android:id="@+id/vitaminB6Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin B-6: 0.041mg"/>

            <TextView
                android:id="@+id/vitaminB9Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin B-9: 3mcg"/>

            <TextView
                android:id="@+id/vitaminB12Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin B-12:  -"/>

            <TextView
                android:id="@+id/vitaminCValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin C: 4.6mg"/>

            <TextView
                android:id="@+id/vitaminDValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin D:  -"/>

            <TextView
                android:id="@+id/vitaminEValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Vitamin E: 0.18mg"/>

            <TextView
                android:id="@+id/calciumValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Calcium: 6mg"/>

            <TextView
                android:id="@+id/ironValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Iron: 0.12mg"/>

            <TextView
                android:id="@+id/magnesiumValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Magnesium: 5mg"/>

            <TextView
                android:id="@+id/omega3Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Omega-3:  -"/>

            <TextView
                android:id="@+id/phosphorusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Phosphorus: 11mg"/>

            <TextView
                android:id="@+id/sodiumValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Sodium: 1mg"/>

            <TextView
                android:id="@+id/zincValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Zinc: 0.04mg"/>


        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>